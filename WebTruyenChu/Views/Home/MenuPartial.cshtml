@model WebTruyenChu.Models.HomeModel

@using Microsoft.AspNet.Identity



<!-- Header Section Begin -->
<header class="header">
    <div class="container">
        <div class="row">
            <div class="col-lg-2">
                <div class="header__logo">
                    <a href="~/Home/Index">
                        <img src="~/Content/img/logo9.png">
                    </a>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="header__nav">
                    <nav class="header__menu mobile-menu">
                        <ul>
                            <li class="active"><a href="~/Home/Index">Trang chủ</a></li>
                            <li>
                                <a href="@Url.Action("TruyenAll","truyens", new { page = 1 })">Thể loại <span class="arrow_carrot-down"></span></a>
                                <ul class="dropdown">
                                    @foreach (var item in Model.theloais)
                                    {
                                        <li><a href="@Url.Action("TruyenTheLoai","truyens", new { @matheloai= item.matheloai })">@item.tentheloai</a></li>
                                    }
                                </ul>
                            </li>
                            <li><a href="@Url.Action("OurBlog","Home")">Our Blog</a></li>
                            <li><a href="#">Contacts</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
            <div class="col-lg-2">
                <div class="header__right">
                    <a href="#" class="search-switch"><span class="icon_search"></span></a>
                    <a href="@Url.Action("Login","Account")"><span class="icon_profile"></span></a>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
        <div id="mobile-menu-wrap"></div>
    </div>
</header>
<!-- Header Section End -->
